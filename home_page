<script>
  // Theme switching
  const themeSwitcher = document.getElementById('themeSwitcher');
  themeSwitcher.addEventListener('click', () => {
    document.body.classList.toggle('dark-theme');
  });

  // Effects toggling
  const effectsBtn = document.getElementById('effectsBtn');
  const effectsPanel = document.getElementById('effectsPanel');
  let currentEffectEl = null;

  effectsBtn.addEventListener('click', () => {
    if (effectsPanel.style.display === 'block') {
      effectsPanel.style.display = 'none';
      removeEffect();
    } else {
      effectsPanel.style.display = 'block';
    }
  });

  function removeEffect() {
    if (currentEffectEl) {
      currentEffectEl.remove();
      currentEffectEl = null;
    }
  }

  effectsPanel.addEventListener('change', e => {
    if (!e.target.matches('input[type="radio"]')) return;
    removeEffect();
    const val = e.target.value;
    if (val === 'rain') {
      const rainDiv = document.createElement('div');
      rainDiv.className = 'effect-rain';
      document.body.appendChild(rainDiv);
      currentEffectEl = rainDiv;
    } else if (val === 'stars') {
      const starsDiv = document.createElement('div');
      starsDiv.className = 'effect-stars';
      document.body.appendChild(starsDiv);
      currentEffectEl = starsDiv;
    } else if (val === 'bubbles') {
      const bubblesDiv = document.createElement('div');
      bubblesDiv.className = 'effect-bubbles';
      document.body.appendChild(bubblesDiv);
      currentEffectEl = bubblesDiv;
    }
    // none = do nothing
  });

  // Secret code toggle
  const secretToggle = document.getElementById('secret-toggle');
  const secretInputContainer = document.getElementById('secretInputContainer');
  const secretInput = document.getElementById('secretInput');

  secretToggle.addEventListener('click', () => {
    if (secretInputContainer.style.display === 'block') {
      secretInputContainer.style.display = 'none';
      secretInput.value = '';
      secretInput.style.border = '';
    } else {
      secretInputContainer.style.display = 'block';
      secretInput.focus();
    }
  });

  // Navigate to mood page function
  function goToMood(mood) {
    window.location.href = `mood/${mood}.html`;
  }
  window.goToMood = goToMood;

  // Handle secret input enter key
  secretInput.addEventListener('keydown', e => {
    if (e.key !== 'Enter') return;
    const val = secretInput.value.trim().toLowerCase();
    if (!val) return;

    const now = new Date();
    const day = String(now.getDate());

    if (val === '0103') {
      window.location.href = 'yukki.html';
    } else if (val === day) {
      showMoodSelectorPanel();
    } else {
      secretInput.style.border = '2px solid red';
    }
  });

  secretInput.addEventListener('input', () => {
    secretInput.style.border = '';
  });

  // Mood selector panel handlers
  const moodSelectorContainer = document.getElementById('moodSelectorContainer');
  const closeMoodSelectorBtn = document.getElementById('closeMoodSelector');

  function showMoodSelectorPanel() {
    moodSelectorContainer.style.display = 'block';
  }
  closeMoodSelectorBtn.addEventListener('click', () => {
    moodSelectorContainer.style.display = 'none';
  });

</script>

</body>
